#include<stdio.h>
main()
{
int mark;
clrscr();
printf("Enter the mark: ");
scanf("%d",&mark);
if(mark>=85)
{
printf("Grade A");
}
else if(mark>=70)
{
printf("Grade B");
}
else if(mark>=55)
{
printf("Grade C");
}
else if(mark>=40)
{
printf("Grade D");
}
else if(mark<40)
{
printf("Fail");
}
getch();
}
